// Frame buffer

package fi.oulu.ee.mvg;

import fi.oulu.ee.mvg.Constants.*;

actor Mgnt_Framebuf () int(size=ADDR_SZ) RA, int(size=ADDR_SZ) WA, int(size=PIX_SZ) WD
==> int(size=PIX_SZ) RD :

	// Port size declaration

	int BUF_SZ = MAXW_IN_MB * (384 * MAXH_IN_MB + SEARCHWIN_IN_MB * 192 + 384);

	int PIX_SZ = 9;

	List(type: int(size=PIX_SZ), size=BUF_SZ) buf;

	action RA:[ a ] ==> RD:[ buf[a] ] //do
		//if a = 25344 + 115456 + 24 then
		//  println("buf["+a+"] contains "+buf[a]);
		//end

	end

	action WA:[ a ], WD:[ d ] ==>
	do
		buf[a] := d;
		//if a = 25344 + 115456 + 24 then
		//  println("setting buf["+a+"] to "+d);
		//end

	end

end