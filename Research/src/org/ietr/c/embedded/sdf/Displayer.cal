// Stupid actor that displays data
package org.ietr.c.embedded.sdf;

actor Displayer () int(size=32) data1,
	int(size=32) data2
	==> :

	int(size=32) sum1;

	int(size=32) sum2;

	display: action data1:[ d1 ] repeat 128, data2:[ d2 ] repeat 128 ==>
	do
		sum1 := 0;
		sum2 := 0;
		foreach int(size=32) i in 0 .. 127 do
			sum1 += d1[i];
			sum2 += d2[i];
		end
		print("(" + sum1 + "," + sum2 + ")");
	end

end