// Stupid actor that transforms data
package org.ietr.c.embedded.sdf;

actor Transformer (int OFFSET) int(size=32) data_in ==> int(size=32) data_out :

	int(size=32) d_out [ 64 ];

	transform: action data_in:[ d_in ] repeat 64 ==> data_out:[ d_out ] repeat
		64
	do
		foreach int(size=32) i in 0 .. 63 do
			d_out[i] := d_in[i] + OFFSET;
		end
	end

end