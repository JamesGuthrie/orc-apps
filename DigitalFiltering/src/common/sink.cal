package common;

import common.constants.*;

actor sink() int(size=SAMPLE_SZ) operand_1 ==> :

	@native procedure native_sink_init()
	end

	@native procedure native_sink_consume(int(size=SAMPLE_SZ) sample)
	end

	init: action ==>
	do
		native_sink_init();
	end
	
	consume: action operand_1:[ sample ] ==>
	do
		native_sink_consume(sample);
	end
	
	schedule fsm start :
		start (init) --> ready;
		ready (consume) --> ready;
	end
end