package testBench.common;

import  testBench.common.SourceUnit.*;

actor CheckU8(String portName)
	uint(size=8) RealValue,
	uint(size=8) ValueGenerated
		==>
		:

	uint numTokenRead;

	action RealValue:[r], ValueGenerated:[v] ==> 
	do
		if(v!=r) then
			println("Port "+portName+" : "+v+" instead of "+r+" ; @ "+numTokenRead);
			source_exit(-1);
		end
		numTokenRead := numTokenRead + 1;
	end
end