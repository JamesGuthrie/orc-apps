package xIT;  

actor IT_Merger()  int(size=6)   Size,                                          
                   int(size=16)  Block_skip, 
                   int(size=16)  Block_4x4_DST, 
                   int(size=16)  Block_4x4_IT, 
                   int(size=16)  Block_8x8, 
                   int(size=27)  Block_16x16, 
                   int(size=27)  Block_32x32 
                   ==>                                    
                   int(size=16)  Block  
                   :
 			
	bool  	DEBUG_L1 = false;
	bool    DEBUG_L2 = false;
	
	uint(size=32) nbTransformUnit := 0;  				// number of TU merged		
	
	merge_4x4.trans_skip: action Size:[ sizeOfTU, RCskip, isDST, transformSkipFlag ], 
	                  Block_skip: [ res ] repeat 4*4
	                  ==>
	                  Block: [ res ] repeat 4*4
	guard
      sizeOfTU = 4 and transformSkipFlag = 1
	do
     	nbTransformUnit := nbTransformUnit + 1;	   
		if (DEBUG_L1) then
			println("Merger ACTION: merge_4x4");	
			println("------------------------");		
			if (DEBUG_L2) then
			  println("sizeOfTU = " + sizeOfTU);
			  foreach int i in 0 .. 15 do
			    println("res    = " + res[i]);
			  end
			  println("nbTransformUnit = " + nbTransformUnit);  			  
			  println("------------------------");				  
			end	
        end			
	end

	merge_4x4.DST: action Size:      [ sizeOfTU, RCskip, isDST, transformSkipFlag ], 
	                  Block_4x4_DST: [ res ] repeat 4*4
	                  ==>
	                  Block: [ res ] repeat 4*4
	guard
      sizeOfTU = 4 and isDST = 1 and transformSkipFlag = 0
