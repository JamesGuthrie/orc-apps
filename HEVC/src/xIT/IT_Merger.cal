	                  Block_4x4_IT: [ res ] repeat 4*4
	                  ==>
	                  Block: [ res ] repeat 4*4
	guard
      sizeOfTU = 4 and isDST = 0 and transformSkipFlag = 0
	do
     	nbTransformUnit := nbTransformUnit + 1;	   
		if (DEBUG_L1) then
			println("Merger ACTION: merge_4x4");	
			println("------------------------");		
			if (DEBUG_L2) then
			  println("sizeOfTU = " + sizeOfTU);
