package xIT;

import xIT.Constants.*;

actor IT4x4_Addshift () int(size=16) Src
                                               ==> 
                                               int(size=16) Dst 
                                               :
                        
  uint(size = SHIFT_INV)  ROUNDING_FACTOR  = 1 << (SHIFT_INV - 1);

  action Src:[ src ] 
         ==> 
         Dst:[ (src + ROUNDING_FACTOR) >> SHIFT_INV ]
  end
  
end
