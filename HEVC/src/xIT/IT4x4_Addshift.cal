package xIT;

import xIT.InverseTransformInfo.*;

actor IT4x4_Addshift () int(size=16) Src
                        ==> 
                        int(size=16) Dst 
                        :
                        
  uint(size = SHIFT_INV_1ST)  ROUNDING_FACTOR  = 1 << (SHIFT_INV_1ST - 1);

  action Src:[ src ] 
         ==> 
         Dst:[ (src + ROUNDING_FACTOR) >> SHIFT_INV_1ST ]
  end
  
end
