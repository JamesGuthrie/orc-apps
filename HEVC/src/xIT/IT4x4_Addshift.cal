package xIT;

actor IT4x4_Addshift (uint(size = 4) shiftInv) int(size=16) Src
                                               ==> 
                                               int(size=16) Dst 
                                               :
                        
  uint(size = shiftInv)  ROUNDING_FACTOR  = 1 << (shiftInv - 1);

  action Src:[ src ] 
         ==> 
         Dst:[ (src + ROUNDING_FACTOR) >> shiftInv ]
  end
  
end
